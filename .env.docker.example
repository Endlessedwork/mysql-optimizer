# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_DB=mysql_optimizer
POSTGRES_USER=optimizer_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_PORT=5432

# ============================================
# SaaS API
# ============================================
API_PORT=3001
# IMPORTANT: Must be at least 32 characters
JWT_SECRET=change_me_jwt_secret_at_least_32_characters_long
# IMPORTANT: Must be at least 32 characters
API_SECRET=change_me_api_secret_at_least_32_characters_long
# Must be a valid UUID (used for multi-tenant isolation)
TENANT_ID=00000000-0000-0000-0000-000000000000
# CORS origin (Admin UI URL)
CORS_ORIGIN=http://localhost:3050

# ============================================
# Admin UI
# ============================================
UI_PORT=3050
# IMPORTANT: No default credentials - you MUST set these
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_admin_password
# Public URL for client-side API calls (only used at build time)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# ============================================
# Agent (Uncomment when ready)
