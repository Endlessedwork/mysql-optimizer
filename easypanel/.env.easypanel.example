# PostgreSQL
POSTGRES_DB=mysql_optimizer
POSTGRES_USER=optimizer_user
POSTGRES_PASSWORD=เปลี่ยนรหัสผ่านให้แข็งแรง
POSTGRES_PORT=5432

# SaaS API
API_PORT=3001
JWT_SECRET=เปลี่ยนเป็นค่าลับอย่างน้อย_32_ตัวอักษร
API_SECRET=เปลี่ยนเป็นค่าลับอย่างน้อย_32_ตัวอักษร

# Admin UI
UI_PORT=3050
ADMIN_USERNAME=admin
ADMIN_PASSWORD=เปลี่ยนรหัสผ่านแอดมิน

# สำคัญ: URL ที่เบราว์เซอร์ใช้เรียก API (ต้องเป็น URL สาธารณะ เช่น domain ที่ผูกกับ EasyPanel)
# ตัวอย่าง: https://api.yourdomain.com หรือ https://yourdomain.com (ถ้า reverse proxy ไปที่พอร์ต 3001)
NEXT_PUBLIC_API_BASE_URL=https://your-api-domain.com
