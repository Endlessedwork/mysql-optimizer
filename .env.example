# ==================================================
# PostgreSQL (Primary Database)
# ==================================================
POSTGRES_DB=mysql_optimizer
POSTGRES_USER=optimizer_user
POSTGRES_PASSWORD=optimizer_password_secure_change_me
POSTGRES_PORT=5432

# ==================================================
# Application / API Configuration
# ==================================================
NODE_ENV=development
API_PORT=3001
UI_PORT=3050

# Authentication (REQUIRED - change these values!)
JWT_SECRET=change_me_jwt_secret_at_least_32_characters_long
API_SECRET=change_me_api_secret_at_least_32_characters_long
TENANT_ID=00000000-0000-0000-0000-000000000000

# Admin UI Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password_secure_change_me

# CORS
CORS_ORIGIN=http://localhost:3050
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# ==================================================
# MySQL Target (for Agent to scan)
# ==================================================
MYSQL_TARGET_HOST=mysql
MYSQL_TARGET_PORT=3306
MYSQL_TARGET_USER=optimizer
MYSQL_TARGET_PASSWORD=optimizerpass
MYSQL_TARGET_DATABASE=testdb

# Test MySQL (Docker)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_TEST_DATABASE=testdb
MYSQL_PORT=3306

# ==================================================
# Agent Configuration
# ==================================================
AGENT_MODE=both                    # scan, execute, or both
AGENT_ID=agent-1
CONNECTION_PROFILE_ID=             # Set after creating a connection profile
POLL_INTERVAL_MS=30000             # Execution polling interval
MAX_EXECUTION_TIME=5000            # Max query execution time (ms)
TOP_N_QUERIES=100                  # Number of top queries to analyze
